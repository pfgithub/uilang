const std = @import("std");

const counter = widget() {
	state counted: i53 = 0;
	return .div(
		:class="counter",
		.button("++", :onclick = fn() counted = counted + 1),
		.span(" ", counted, " "),
		.button("--", :onclick = fn() counted = counted - 1),
	);
};

const main = fn() {
	std.demo(counter);
};

